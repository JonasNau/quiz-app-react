{
	"name": "quiz-app-local-hosting",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev:setup": "npm install && npm run \"joi-to-typescript:convert\"",
		"dev:start": "concurrently  \" npm run dev:nextjs:express\" \"npm run dev:watch-schema\" -n \"Server,Build-Schamas\"",
		"dev:nextjs:express": "nodemon --exec \"npx ts-node -r tsconfig-paths/register ./src/server/application.ts\" --watch ./src/server --ext *",
		"dev:watch-schema": "npx watch \"npm run joi-to-typescript:convert\" ./src/schemas/joi",
		"joi-to-typescript:convert": "npx ts-node -r tsconfig-paths/register ./scripts/convertJoiTypesToTypescriptInterfaces.ts",
		"build:next": "next build",
		"build:express": "rimraf ./dist && tsc -p tsconfig.server.json && tsc-alias -p tsconfig.server.json",
		"build": "npm run build:next && npm run build:express",
		"prod:start": "node ./dist/server/server/application.js",
		"prod:build:start": "npm run build && npm run prod:start",
		"lint": "next lint",
		"test:unit": "jest",
		"test:e2e:install": "playwright install",
		"test:e2e": "playwright test",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:showReport": "playwright show-report"
	},
	"dependencies": {
		"@codemirror/lang-json": "^6.0.1",
		"@codemirror/language": "^6.10.0",
		"@codemirror/lint": "^6.4.2",
		"@fortawesome/fontawesome-free": "^6.5.1",
		"@fortawesome/fontawesome-svg-core": "^6.5.1",
		"@fortawesome/free-solid-svg-icons": "^6.5.1",
		"@fortawesome/react-fontawesome": "^0.2.0",
		"@jest/globals": "^29.7.0",
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/react": "^14.2.1",
		"@testing-library/user-event": "^14.5.2",
		"@types/bootstrap": "^5.2.10",
		"@types/express": "^4.17.21",
		"@types/fs-extra": "^11.0.4",
		"@types/jest": "^29.5.12",
		"@uiw/react-codemirror": "^4.21.21",
		"audit": "^0.0.6",
		"bootstrap": "^5.3.2",
		"codemirror-formatting": "^1.0.0",
		"concurrently": "^8.2.2",
		"express": "^4.18.2",
		"fs-extra": "^11.2.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"joi": "^17.11.0",
		"joi-to-typescript": "^4.12.0",
		"loglevel": "^1.8.1",
		"next": "14.0.4",
		"nodemon": "^3.0.2",
		"prettier": "^3.1.1",
		"re-resizable": "^6.9.11",
		"react": "^18",
		"react-bootstrap": "^2.9.2",
		"react-dnd": "^16.0.1",
		"react-dnd-html5-backend": "^16.0.1",
		"react-dom": "^18",
		"rimraf": "^5.0.5",
		"safetest": "^0.1.13",
		"socket.io": "^4.7.3",
		"socket.io-client": "^4.7.3",
		"sweetalert2": "^11.6.13",
		"sweetalert2-react-content": "^5.0.7",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.8",
		"tsconfig-paths": "^4.2.0",
		"winston": "^3.11.0",
		"winston-daily-rotate-file": "^4.7.1"
	},
	"devDependencies": {
		"@playwright/test": "^1.42.1",
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18.2.18",
		"@types/react-test-renderer": "^18.0.7",
		"eslint": "^8",
		"eslint-config-next": "14.0.4",
		"react-test-renderer": "^18.2.0",
		"sass": "^1.69.7",
		"typescript": "^5"
	}
}
